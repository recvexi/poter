{
  "name": "poter",
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist",
    "build": "pnpm run clean && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "prepack": "npm run build",
    "prepublishOnly": "npm run test && npm run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/toter.mjs",
      "require": "./dist/toter.cjs"
    }
  },
  "main": "./dist/toter.cjs",
  "module": "./dist/toter.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=20.19"
  },
  "sideEffects": false,
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.36.0",
    "@types/node": "^22.7.9",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.9",
    "@tarojs/taro": "^3",
    "react": "^17.0.0",
    "@types/react": "^17.0.0"
  },
  "dependencies": {
    "mitt": "^3.0.1"
  },
  "peerDependencies": {
    "@tarojs/taro": ">=3",
    "react": ">=17"
  },
  "peerDependenciesMeta": {
    "@tarojs/taro": {
      "optional": false
    },
    "react": {
      "optional": false
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "**/*.{json,md,yml,yaml,css,scss,less}": [
      "prettier --write"
    ]
  }
}
